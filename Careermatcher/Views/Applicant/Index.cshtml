@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutApplicant.cshtml";
}

<div class="hidden-xs">
    <!--Used to hide carousel-->
    <div id="myCarousel" class="carousel slide" data-ride="carousel" style="width:100%; min-height:200px;">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="http://i.imgur.com/x6p9Hve.jpg" alt="Career">
                <div class="carousel-caption">
                    <h4>Find a career that suits you!</h4>
                    <p><a href="~/Home/About" class="btn btn-info" role="button">Read More</a></p>
                </div>
            </div>

            <div class="item">
                <img src="http://i.imgur.com/bUter8r.jpg" alt="Image">
                <div class="carousel-caption">
                    <h4>Jobs that can give you a bright future!</h4>
                    <p><a href="~/Home/About" class="btn btn-info" role="button">Read More</a></p>
                </div>
            </div>

            <div class="item">
                <img src="http://i.imgur.com/dQS1x04.jpg" alt="Image">
                <div class="carousel-caption">
                    <h4>Jobs that can give you a bright future!</h4>
                    <p><a href="~/Home/About" class="btn btn-info" role="button">Read More</a></p>
                </div>
            </div>

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div> <!--Carousel-->
</div>

