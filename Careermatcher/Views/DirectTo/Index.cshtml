
@{
    Layout = "~/Views/Shared/_LayoutClean.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Homepage</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="jumbotron text-center">
        <h2 class="hp-title">Welcome to<span class="title-color"> Career Matcher</span></h2>
        <h2 class="hp-title2">Register as an...</h2>


    </div>
    <div class="jumbotron2">
        <div>
            @using (Html.BeginForm("Applicant", "DirectTo"))
            {
                <input type="submit" class="btn btn-primary btn-lg" value="Applicant" />
            }
        </div>
        <div>
            <br />
            <p>Click here to register as an </p>
            <ul class="blt-pnt">
                <li>Login</li>
                <li>Fill out your profile</li>
                <li>Find a Match</li>
            </ul>
        </div>
    </div>

    <div class="hidden-xs">
        <!--Used to hide carousel-->
        <div id="myCarousel" class="carouselhome slide" data-ride="carousel" style="width:33%; min-height:200px;">
            <!-- Indicators -->
            <ol class="carousel-indicators2">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="http://i.imgur.com/JBq7KlH.png" alt="Career">

                </div>

                <div class="item">
                    <img src="http://i.imgur.com/Svu4hQa.png" alt="Image">

                </div>

                <div class="item">
                    <img src="http://i.imgur.com/4ARk4ha.png" alt="Image">

                </div>

            </div>

        </div> <!--Carousel-->
    </div>

    <div class="jumbotron3">
        <div>
            @using (Html.BeginForm("Employer", "DirectTo"))
            {
                <input type="submit" class="btn btn-primary btn-lg" value="Employer" />
            }
        </div>
        <div>
            <br />
            <p>Click here to register as an Employer</p>
            <ul class="blt-pnt">
                <li>Login</li>
                <li>List a Job</li>
                <li>Hire employees</li>
            </ul>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>

</html>
