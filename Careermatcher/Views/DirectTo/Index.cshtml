
@{
    Layout = "~/Views/Shared/_LayoutClean.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Homepage</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="customtron3 text-center">
        <h2 class="hp-title">Welcome to<span class="title-color"> Career Matcher</span></h2>
        @*<h2 class="hp-title2">Register as an...</h2>*@


    </div>
    <div class="customtron ">
        <div class="btn-a">

            @using (Html.BeginForm("Applicant", "DirectTo"))
            {
                <input type="submit" class="btn-2 btn-primary2 btn-lg2" value="Applicant" />
            }
        </div>
        <div class="custom-text">
            <br />
            <p>Click here to register/log in as an Applicant</p>
            <ul class="blt-pnt">
                <li>Login</li>
                <li>Fill out your profile</li>
                <li>Find a Match</li>
            </ul>
        </div>
    </div>
    <div class="customtron2">
        <div class="btn-e">
            @using (Html.BeginForm("Employer", "DirectTo"))
            {
                <input type="submit" class="btn-2 btn-primary2 btn-lg2" value="Employer" />
            }
        </div>
        <div class="custom-text">
            <br />
            <p>Click here to register/log in as an Employer</p>
            <ul class="blt-pnt">
                <li>Login</li>
                <li>List a Job</li>
                <li>Hire employees</li>
            </ul>
        </div>
    </div>
    <div class="customtron4">
        <div class="hidden-xs">
            <!--Used to hide carousel-->
            <div id="myCarousel" class="carouselhome slide" data-ride="carousel" style="width:100%">
                <!-- Indicators -->
                <ol class="carousel-indicators2"></ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    <div class="item active">
                        <img src="http://i.imgur.com/JBq7KlH.png" alt="Career">

                    </div>

                    <div class="item">
                        <img src="http://i.imgur.com/Svu4hQa.png" alt="Image">

                    </div>

                    <div class="item">
                        <img src="http://i.imgur.com/4ARk4ha.png" alt="Image">

                    </div>

                </div>

            </div> <!--Carousel-->
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>
</html>
